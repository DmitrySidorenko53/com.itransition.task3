@model IEnumerable<com.itransition.task3.Models.User>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
          crossorigin="anonymous" />
    <link rel="stylesheet"
          href="https://cdn-uicons.flaticon.com/uicons-regular-rounded/css/uicons-regular-rounded.css" />
    <link rel="stylesheet" href="~/css/table-style.css" />
    <title>Management</title>
    <script type="text/javascript"
            src="@Url.Content("~/Scripts/")jquery-1.10.2.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#checkAll').click(function () {
                if ($(this).is(":checked"))
                $('.checkEmail').prop('checked', true);
                else
                $('.checkEmail').prop('checked', false)
            });
        });
    </script>
</head>
<body class="bg-black bg-opacity-75 text-white">
    @if(User.Identity.IsAuthenticated) {
        <nav class="navbar bg-dark">
            <div class="container-lg">
                <a class="navbar-brand text-white" href="#">User Management</a>
                <form class="form-check-inline" asp-action="Logout" asp-controller="Account" method="post">
                    <span class="me-3 align-self-center">Welcome, @User.Identity.Name!</span>
                    <button type="submit" class="btn bg-danger text-white">
                        <i class="fi fi-rr-exit"></i>
                    </button>
                </form>
            </div>
        </nav>
        <div class="table-responsive-sm mt-3">
            <table class="table table-hover table-dark bg-opacity-75 w-75 mx-auto text-center table-striped table-responsive-sm caption-top">
                <caption>
                    <div class="d-flex flex-row">
                        <a href="" class="btn btn-danger me-2">Block</a>
                        <a href="" class="btn btn-dark me-2">
                            <i class="fi fi-rr-unlock"></i>
                        </a>
                        <a href="" class="btn btn-dark me-2">
                            <i class="fi fi-rr-cross-circle"></i>
                        </a>
                    </div>
                </caption>
                <thead>
                    <tr class="table-dark text-white text-opacity-50">
                        <th>
                            <input id="checkAll" type="checkbox" />
                        </th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Register Date</th>
                        <th>Last Login Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model) {
                        <tr>
                            <th scope="row"><input type="checkbox" class="checkEmail" name="checkEmail" value="@item.Email" /></th>
                            <td data-label="Full Name">@item.FullName</td>
                            <td data-label="Email">@item.Email</td>
                            <td data-label="Register Date">@item.RegisterDate</td>
                            <td data-label="Last Login Date">@item.LastLoginDate</td>
                            <td data-label="Status">@item.Status.ToString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else {
        <nav class="navbar bg-dark">
            <div class="container-lg">
                <a class="navbar-brand text-white" href="#">User Management</a>
                <span class="me-3 align-self-center">
                    <a href="@Url.Action("Login", "Account")" class="btn btn-danger me-2 mt-1">Login</a>
                    <a href="@Url.Action("Register", "Account")" class="btn btn-danger me-2 mt-1">Register</a>
                </span>
            </div>
        </nav>
        <figure class="text-center">
            <blockquote class="blockquote">
                <p>You should be authenticated to manage users data!</p>
            </blockquote>
            <figcaption class="blockquote-footer text-white">
                Please check links on navbar ;)))
            </figcaption>
        </figure>
    }
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
            crossorigin="anonymous"></script>
</body>
</html>



