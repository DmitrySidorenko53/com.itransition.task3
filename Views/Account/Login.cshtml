@model com.itransition.task3.ViewModels.Account.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html>
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
          crossorigin="anonymous" />
    <!-- JavaScript Bundle with Popper -->
    <title>Login</title>
</head>
<body class="bg-black bg-opacity-75 text-white">
    <div class="container-lg mt-5 w-75">
        <div class="row justify-content-center">
            <div class="col-lg-5 bg-dark bg-opacity-50 p-3">
                <h1 class="text-center">Sign In</h1>
                <h5 class="text-center">Welcome Back!</h5>
                <form method="post" asp-controller="Account" asp-action="Login"
                asp-route-returnUrl="@Model.ReturnUrl">
                    <div asp-validation-summary="ModelOnly"></div>
                    <label asp-for="Email" class="form-label mt-2">Email : </label><br />
                    <input asp-for="Email" placeholder="myemail@gmail.com"
                           class="form-control bg-dark bg-opacity-100 text-white"
                           required/>
                    <span asp-validation-for="Email"></span>
                    <label asp-for="Password" class="form-label mt-2">Password : </label><br />
                    <input asp-for="Password" placeholder="Password"
                           class="form-control bg-dark bg-opacity-100 text-white"
                           required/>
                    <span asp-validation-for="Password"></span>
                    <div class="text-center">
                        <button type="submit" class="btn btn-dark mt-3 mb-3 w-100">
                            Submit
                        </button>
                    </div>
                </form>
                <div class="text-center mb-3">
                    Don't have an account?<p><a class="text-info" href="@Url.Action("Register", "Account")">Please, sign up!</a></p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
